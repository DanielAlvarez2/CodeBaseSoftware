        'https://cdn.glitch.global/548bda4c-3b17-418d-b393-0e7ad8bf72f4/Expressjs2.png?v=1721950540199',
        'https://cdn.glitch.global/548bda4c-3b17-418d-b393-0e7ad8bf72f4/npm4.png?v=1721956811433',
        'https://cdn.glitch.global/548bda4c-3b17-418d-b393-0e7ad8bf72f4/html2.png?v=1721949274190',
        'https://cdn.glitch.global/548bda4c-3b17-418d-b393-0e7ad8bf72f4/css4.png?v=1721949445632',
        'https://cdn.glitch.global/548bda4c-3b17-418d-b393-0e7ad8bf72f4/JS4.png?v=1721946596174',
        'https://cdn.glitch.global/548bda4c-3b17-418d-b393-0e7ad8bf72f4/mongoDB3.png?v=1721945729589',
        'https://cdn.glitch.global/548bda4c-3b17-418d-b393-0e7ad8bf72f4/git2.png?v=1721947049020',
        'https://cdn.glitch.global/548bda4c-3b17-418d-b393-0e7ad8bf72f4/bash2.png?v=1721948448119',
      ]
      let shuffledLogos = []
      iterations = techLogos.length
      for (let i=0;i<iterations;i++){
        let j = Math.floor(Math.random() * techLogos.length)
        shuffledLogos.push(techLogos[j])
        techLogos.splice(j,1)
      }
console.log(shuffled)
%>

</head>
