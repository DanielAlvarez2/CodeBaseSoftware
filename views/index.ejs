<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="style.css">
    <style>
        *{
            margin:0;
            padding:0;            
            box-sizing: border-box;
        }
        @font-face {
            font-family: 'Internationalist';
            src: url('https://cdn.glitch.global/548bda4c-3b17-418d-b393-0e7ad8bf72f4/Internationalist.otf?v=1721811667949');
        }        
        @font-face {
            font-family: 'InternationalistHollow';
            src: url('https://cdn.glitch.global/548bda4c-3b17-418d-b393-0e7ad8bf72f4/Internationalist-Hollow.otf?v=1721811671191');
        }
        .code,.base{
            font-size: 150px;
        } 
        .software{
            font-size: 50px;
            font-family: sans-serif;
            font-weight: 100;
            color:lightgray;
            width:100%;
            text-align: center;
        }           
        .code{
            font-family: Internationalist;
            color: blue;
        }
        .base{
            color:orange;
            font-family: InternationalistHollow;
        }
        #logo{
            display:flex;
            position:relative;
        }
        body{
            width:100%;
            min-height:100vh;
            min-height:100svh;
            display: grid;
            place-content: center;
        }
        #url{
            position:relative;
            top:50px;
            border:1px solid black;
            text-align: center;
            font-family: sans-serif;
            font-size: 20px;
            width:250px;
            padding: 5px 0;
            border-radius:15px;
            margin:0 auto;
            box-shadow: 5px 5px 5px grey;
            cursor:pointer;
            background:orange;
        }
        .text{
          font-family:sans-serif;
          text-align:center;
        }
        .scrolling_text{
            top:155px;
        }
        .scrolling_logos{
            top:230px;
        }
        .scrolling_text,.scrolling_logos {
            width: 100%;
            overflow: hidden;
            display: flex;
            white-space: nowrap;
            position:absolute;
        }
        .text span {
            margin: 0 40px;
        }
        @keyframes animate_text {
            from {
              transform: translate3d(0, 0, 0);
            }
            to {
              transform: translate3d(-100%, 0, 0);
            }
        }
        @keyframes animate_logos {
            from {
              transform: translate3d(-100%, 0, 0);
            }
            to {
              transform: translate3d(0, 0, 0);
            }
        }
      
        .text {
            font-size: 20px;
            font-weight: 100;
            color: black;
            animation: animate_text 30s linear infinite;
        }    
        .logos {
            animation: animate_logos 30s linear infinite;
        }    
      
      .tech-logo{
        max-height:50px;
        margin:0 50px;
      }

      
      
  
      
      @media (590px <= width <= 875px){
        .code,.base{
            font-size: 100px;
        } 
        .software{
            font-size: 40px;
            padding-top:20px;
        }
        .text{
          font-size: 16px;
        }
        .scrolling_text{
            top:110px;
        }
        .scrolling_logos{
            top:190px;
        }          
      }

      
      @media (max-width:589px){
        .code,.base{
            font-size: 50px;
        } 
        .software{
            font-size: 30px;
            padding-top:20px;
        }
        .text{
          font-size:12px;
        }
        .scrolling_text{
            top:58px;
        }
        .scrolling_logos{
            top:120px;
        }          
      }
      
    </style>
  
<%    let tech = [
        '.HTML','MongoDB Atlas','.CSS','NPM','.JS',
        'Version Control', 'UI/UX', 'DNS',
        'MVC Architecture','.ENV','User Auth','.EJS','Server',
        '.JPG','Node','.ICO','Express','.JSON','SSR','.COM',
