        'Command Line','Terminal','SEO','Bash','Full-Stack',
        'JavaScript','Development','Deployment','Production',
        'CRUD','Database','.PNG'
      ]
      let shuffled = []
      let iterations = tech.length
      for (let i=0;i<iterations;i++){
